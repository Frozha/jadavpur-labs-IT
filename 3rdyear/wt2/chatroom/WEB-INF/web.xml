<web-app>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.hw.ChatroomLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>chat</servlet-name>
        <servlet-class>com.hw.ChatroomServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>chat</servlet-name>
        <url-pattern>/chat/*</url-pattern>
    </servlet-mapping>
</web-app>